{
  "manifest_version": 3,
  "name": "I Look",
  "version": "1.0.0",
  "description": "AI 사이트를 내 스타일로! ",
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://grok.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://claude.ai/*",
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://grok.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["styles/injected.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "I Look - AI Theme Customizer"
  },
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "run_at": "document_start"
}
